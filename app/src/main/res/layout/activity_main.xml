<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userPicView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/desc_userPic"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <TextView
            android:id="@+id/text_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/text_username"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/fmenuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_fmenu" />

        <Button
            android:id="@+id/reserveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_reserve" />

        <Button
            android:id="@+id/historyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_history" />

        <Button
            android:id="@+id/couponButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_coupon" />

        <Button
            android:id="@+id/prefButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_preferences" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="@string/btn_logout" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
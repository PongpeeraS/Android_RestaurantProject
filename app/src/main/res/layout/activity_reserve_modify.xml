<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/datem"
        android:layout_width="237dp"
        android:layout_height="70dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="118dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/timem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timem"
        android:layout_width="241dp"
        android:layout_height="73dp"
        android:layout_marginTop="231dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="178dp"
        android:background="@color/bg_login"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/password" />

    <Button
        android:id="@+id/Abandon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:background="@color/colorPrimaryDark"
        android:text="Abandon"
        app:layout_constraintStart_toStartOf="@+id/Update"
        app:layout_constraintTop_toBottomOf="@+id/Update" />

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:text="Back"
        app:layout_constraintBaseline_toBaselineOf="@+id/Abandon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="190dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datem" />
</android.support.constraint.ConstraintLayout>